<Window x:Class="StroyCompany.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="usernameTextBox" HorizontalAlignment="Left" Margin="90,15,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passwordBox" HorizontalAlignment="Left" Margin="90,45,0,0" VerticalAlignment="Top" Width="180"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="90,80,0,0" VerticalAlignment="Top" Width="180" Click="LoginButton_Click"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="90,110,0,0" VerticalAlignment="Top" Width="180" Click="RegisterButton_Click"/>
    </Grid>
</Window>
